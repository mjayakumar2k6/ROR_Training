<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :empid %>
    <%= form.number_field :empid %>
  </div>

  <div class="field">
    <%= form.label :department %>
    <%= form.collection_select :department_id, @departments, :id, :name, {prompt: "Please select"} %>
  </div>

  <hr>

  <h2>Roles</h2>

  <div class="field">
    <% @roles.each do|role| %>
      
      <%= check_box_tag("role[]", role.id) %> <%= role.name %>

    <% end %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
